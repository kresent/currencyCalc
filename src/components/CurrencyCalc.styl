.calc
  border 1px solid #BBB
  border-radius 10px
  display flex
  flex-direction column
  margin-top 7em
  padding 1.5em 1.5em 0.5em
  text-align right
  width 25em

  &__currency-select
    margin-left 1em
    width 100px

  &__input-wrapper
    align-items center
    display flex
    width 100%

  &__value-input
    border none
    border-bottom 1px solid #BBB
    font-size 1em
    padding 1em 0
    text-align right
    width 100%

  &__output-wrapper
    align-items center
    display flex
    font-size 1em
    height 3em
    justify-content space-between
    width 100%
